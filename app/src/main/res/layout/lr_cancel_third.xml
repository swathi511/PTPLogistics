    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:orientation="vertical">



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/article_details"
                android:textAlignment="center"
                android:textSize="16sp"
                android:layout_marginTop="10dp"
                android:fontFamily="sans-serif"
                android:layout_gravity="center"
                android:textColor="@color/colorLoginBlue"
                android:layout_weight="2"
                android:gravity="center"/>
            <View
                android:layout_width="110dp"
                android:layout_height="1dp"
                android:layout_gravity="center"
                android:background="@color/colorLoginBlue"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:layout_marginTop="15dp"

                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Article Name:"
                    android:textSize="14sp"
                    android:layout_marginRight="35dp"
                    android:textColor="#9D543F"
                    android:layout_weight="2"
                    android:gravity="right"/>

                <Spinner
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:gravity="left"
                    android:id="@+id/lr_status_third_sp_artcle_name_one"
                    android:padding="6dp"
                    android:background="@drawable/spinner_bg"
                    />

                <EditText
                    android:layout_width="70dp"
                    android:id="@+id/lr_status_third_et_artcle_name_two"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:inputType="text"
                    android:textColor="#000000"
                    android:layout_weight="2"
                    android:gravity="left"
                    android:padding="4dp"
                    android:layout_marginLeft="6dp"
                    android:background="@drawable/bg_dark"
                    android:maxLines="2"/>



            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:layout_marginTop="15dp"


                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Article Description:"
                    android:textSize="14sp"
                    android:layout_gravity="center"
                    android:textColor="@color/colorBlack"
                    android:layout_weight="2"
                    android:layout_marginRight="20dp"
                    android:gravity="left"/>



                <EditText

                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/et_bg"
                    android:gravity="start"
                    android:inputType="textMultiLine"
                    android:lines="4"
                    android:id="@+id/lr_status_third_et_artcle_desc"
                    android:maxLength="250"
                    android:maxLines="1"
                    android:padding="4dp"
                    android:scrollbars="vertical"
                    android:textColor="@color/colorBlack"
                    android:textColorHint="#383737"
                    android:textSize="15sp" />



            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:layout_marginTop="15dp"

                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Charged Wt"
                        android:textColor="#9D543F"
                        android:textAlignment="center"
                        android:gravity="center"
                        android:layout_marginLeft="16dp"/>
                    <EditText
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textAlignment="center"
                        android:gravity="center"
                        android:id="@+id/lr_status_third_et_charged_wgt"
                        android:layout_marginTop="10dp"
                        android:padding="2dp"
                        android:background="@drawable/et_bg"
                        android:layout_marginLeft="16dp"
                        android:inputType="number"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Actual Wt"
                        android:textColor="#9D543F"
                        android:textAlignment="center"
                        android:gravity="center"
                        android:layout_marginLeft="16dp"/>
                    <EditText
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textAlignment="center"
                        android:gravity="center"
                        android:id="@+id/lr_status_third_et_actual_wgt"
                        android:layout_marginTop="10dp"
                        android:padding="2dp"
                        android:background="@drawable/et_bg"
                        android:layout_marginLeft="16dp"
                        android:inputType="number"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Qty"
                        android:textColor="#9D543F"
                        android:textAlignment="center"
                        android:gravity="center"
                        android:layout_marginLeft="16dp"/>
                    <EditText
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textAlignment="center"
                        android:gravity="center"
                        android:id="@+id/lr_status_third_et_quantity"
                        android:layout_marginTop="10dp"
                        android:padding="2dp"
                        android:background="@drawable/et_bg"
                        android:layout_marginLeft="16dp"
                        android:inputType="number"/>
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="24dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:gravity="center">

                    <EditText
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_dark"
                        android:padding="8dp"
                        android:hint="L"
                        android:id="@+id/lr_status_third_et_length"
                        android:textColorHint="#848383"
                        android:textSize="15sp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textColor="@color/colorBlack"
                        android:inputType="numberDecimal"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Length"
                        android:textColor="@color/colorBlack"
                        android:textSize="12sp"
                        android:layout_margin="4dp"
                        android:gravity="center"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:gravity="center">

                    <EditText
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_dark"
                        android:padding="8dp"
                        android:hint="W"
                        android:id="@+id/lr_status_third_et_width"

                        android:textColorHint="#848383"
                        android:textSize="15sp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textColor="@color/colorBlack"
                        android:inputType="numberDecimal"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Width"
                        android:textColor="@color/colorBlack"
                        android:textSize="12sp"
                        android:layout_margin="4dp"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:gravity="center">

                    <EditText
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_dark"
                        android:padding="8dp"
                        android:hint="H"
                        android:textColorHint="#848383"
                        android:textSize="15sp"
                        android:id="@+id/lr_status_third_et_height"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textColor="@color/colorBlack"
                        android:inputType="numberDecimal"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Height"
                        android:textColor="@color/colorBlack"
                        android:textSize="12sp"
                        android:layout_margin="4dp"/>


                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="32dp"
                android:paddingRight="32dp"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Update"
                    android:id="@+id/lr_status_third_tv_update"
                    android:background="@drawable/bt_bg"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginRight="16dp"
                    android:textSize="14sp"
                    android:padding="10dp"
                    android:fontFamily="sans-serif-condensed"
                    android:textAllCaps="true"
                    android:textColor="#000000" />


                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Next"
                    android:textAlignment="center"
                    android:background="@drawable/bt_bg"
                    android:layout_gravity="right"
                    android:gravity="right"
                    android:id="@+id/lr_status_third_tv_next"
                    android:layout_marginRight="24dp"
                    android:textSize="14sp"
                    android:padding="10dp"
                    android:textColor="#000000"
                    android:fontFamily="sans-serif-condensed"
                    android:textAllCaps="true"/>

            </LinearLayout>
            <!--<TextView-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:textColor="#662433"-->
            <!--android:layout_marginTop="10dp"-->
            <!--android:layout_marginLeft="10dp"-->
            <!--android:layout_marginRight="10dp"-->
            <!--android:text="@string/measurments_deatils"/>-->

        </LinearLayout>
    </ScrollView>
</RelativeLayout>