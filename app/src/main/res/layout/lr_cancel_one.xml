<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAshLight"
   >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="12dp"
            android:gravity="center"
            android:layout_marginTop="15dp"
            android:paddingRight="12dp"

            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LR Type"
                android:textSize="14sp"
                android:textColor="#000000"
                android:layout_weight="2"
                android:gravity="left"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=":"
                android:textSize="14sp"
                android:layout_gravity="center"
                android:textColor="@color/colorPrimary"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="16dp"/>

            <Spinner
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:gravity="left"
                android:padding="14dp"
                android:id="@+id/lr_status_one_sp_lrtype"
                android:background="@drawable/spinner_bg"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="12dp"
            android:layout_marginTop="10dp"
            android:paddingRight="12dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lr Date"
                android:textSize="16sp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:textColor="@color/colorBlack"
                android:gravity="left"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=":"
                android:textSize="14sp"
                android:layout_gravity="center"
                android:textColor="@color/colorPrimary"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="16dp"/>

            <TextView

                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:background="@drawable/bg_dark"
                android:drawableRight="@drawable/calendar"
                android:hint="Select date"
                android:textAlignment="center"
                android:id="@+id/lr_status_one_tv_lrdate"
                android:maxLines="1"
                android:padding="2dp"
                android:layout_marginBottom="12dp"
                android:textColorHint="#000000"
                android:textSize="14sp"
                android:textColor="@color/colorBlack"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="12dp"
            android:layout_marginTop="10dp"
            android:paddingRight="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LR Criteria"
                android:textSize="14sp"
                android:layout_gravity="center"
                android:textColor="#000000"
                android:layout_weight="2"
                android:gravity="left"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=":"
                android:textSize="14sp"
                android:layout_gravity="center"
                android:textColor="@color/colorPrimary"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="16dp"/>

            <Spinner
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:gravity="left"
                android:id="@+id/lr_status_one_sp_lr_criteria"
                android:padding="14dp"
                android:background="@drawable/spinner_bg"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="12dp"
            android:layout_marginTop="10dp"
            android:paddingRight="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LR No."
                android:textSize="14sp"
                android:textColor="#000000"
                android:layout_weight="2"
                android:gravity="bottom"/>

            <EditText
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:gravity="top"
                android:layout_gravity="top"
                android:layout_marginTop="10dp"
                android:padding="4dp"
                android:id="@+id/lr_status_one_et_lrno_one"
                android:background="@drawable/bg_dark"
                android:layout_marginLeft="16dp"
                android:inputType="number"/>
            <EditText
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:gravity="top"
                android:layout_gravity="top"
                android:layout_marginTop="10dp"
                android:padding="4dp"
                android:id="@+id/lr_status_one_et_lrno_two"
                android:background="@drawable/bg_dark"
                android:layout_marginLeft="6dp"
                android:inputType="number"/>



        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="12dp"
            android:layout_marginTop="10dp"
            android:paddingRight="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="From Location"
                android:textSize="14sp"
                android:layout_gravity="center"
                android:textColor="#000000"
                android:layout_weight="2"
                android:gravity="left"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=":"
                android:textSize="14sp"
                android:layout_gravity="center"
                android:textColor="@color/colorPrimary"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="16dp"/>

            <Spinner
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:gravity="left"
                android:padding="14dp"
                android:id="@+id/lr_status_one_sp_from_loc"

                android:background="@drawable/spinner_bg"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="12dp"
            android:layout_marginTop="10dp"
            android:paddingRight="12dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="To Location"
                android:textSize="14sp"
                android:textColor="#000000"
                android:layout_weight="2"
                android:gravity="left"/>



            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#000000"
                android:layout_weight="1.8"
                android:gravity="left"
                android:padding="2dp"
                android:id="@+id/lr_status_one_et_to_loc"
                android:drawableRight="@drawable/search"
                android:inputType="text"
                android:maxLength="20"
                android:background="@drawable/et_bg"
                android:maxLines="2"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="12dp"
            android:layout_marginTop="10dp"
            android:paddingRight="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tariff Criteria "
                android:textSize="14sp"
                android:layout_gravity="center"
                android:textColor="#000000"
                android:layout_weight="2"
                android:gravity="left"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=":"
                android:textSize="14sp"
                android:layout_gravity="center"
                android:textColor="@color/colorPrimary"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="16dp"/>
            <Spinner
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:gravity="left"
                android:padding="14dp"
                android:id="@+id/lr_status_one_sp_tarif_criteria"

                android:background="@drawable/spinner_bg"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="12dp"
            android:layout_marginTop="10dp"
            android:paddingRight="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dispatch Type"
                android:textSize="14sp"
                android:layout_gravity="center"
                android:textColor="#000000"
                android:layout_weight="2"
                android:gravity="left"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=":"
                android:textSize="14sp"
                android:layout_gravity="center"
                android:textColor="@color/colorPrimary"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="16dp"/>
            <Spinner
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:gravity="left"
                android:padding="14dp"
                android:id="@+id/lr_status_one_sp_dispatch_type"
                android:background="@drawable/spinner_bg"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="12dp"
            android:layout_marginTop="10dp"
            android:paddingRight="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Application Tariff"
                android:textSize="14sp"
                android:layout_gravity="center"
                android:textColor="#000000"
                android:layout_weight="2"
                android:gravity="left"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=":"
                android:textSize="14sp"
                android:layout_gravity="center"
                android:textColor="@color/colorPrimary"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="16dp"/>
            <Spinner
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:gravity="left"
                android:padding="14dp"
                android:id="@+id/lr_status_one_sp_app_tarif"

                android:background="@drawable/spinner_bg"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="12dp"
            android:layout_marginTop="10dp"
            android:paddingRight="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Door Delivey"
                android:textSize="14sp"
                android:layout_gravity="center"
                android:textColor="#000000"
                android:layout_weight="2"
                android:gravity="left"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=":"
                android:textSize="14sp"
                android:layout_gravity="center"
                android:textColor="@color/colorPrimary"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="16dp"/>
            <Spinner
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:gravity="left"
                android:padding="14dp"
                android:id="@+id/lr_status_one_sp_door_delivery"

                android:background="@drawable/spinner_bg"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="12dp"
            android:layout_marginTop="10dp"
            android:paddingRight="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status"
                android:textSize="14sp"
                android:layout_gravity="center"
                android:textColor="#000000"
                android:layout_weight="2"
                android:gravity="left"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=":"
                android:textSize="14sp"
                android:layout_gravity="center"
                android:textColor="@color/colorPrimary"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="16dp"/>
            <Spinner
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:gravity="left"
                android:id="@+id/lr_status_one_sp_status"

                android:padding="14dp"
                android:background="@drawable/spinner_bg"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="12dp"
            android:layout_marginTop="10dp"
            android:paddingRight="12dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="LR Narration"
                android:textSize="14sp"
                android:layout_gravity="center"
                android:textColor="#000000"
                android:layout_weight="2"
                android:gravity="left"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#000000"
                android:layout_weight="1.6"
                android:gravity="start"
                android:padding="8dp"
                android:id="@+id/lr_status_one_et_lr_narration"
                android:inputType="textMultiLine"
                android:maxLength="20"
                android:background="@drawable/et_bg"
                android:lines="4"/>



        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="12dp"
            android:layout_marginTop="10dp"
            android:paddingRight="12dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lr Cancel Date"
                android:textSize="16sp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:textColor="@color/colorBlack"
                android:gravity="left"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=":"
                android:textSize="14sp"
                android:layout_gravity="center"
                android:textColor="@color/colorPrimary"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="16dp"/>
            <TextView

                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:background="@drawable/et_bg"
                android:drawableRight="@drawable/calendar"
                android:hint="Select date"
                android:maxLines="1"
                android:id="@+id/lr_status_one_tv_lr_cancel_date"
                android:textAlignment="center"
                android:padding="2dp"
                android:layout_marginBottom="12dp"
                android:textColorHint="#000000"
                android:textSize="14sp"
                android:textColor="@color/colorBlack"/>


        </LinearLayout>
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Next"
            android:textAlignment="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/bt_bg"
            android:layout_gravity="right"
            android:gravity="right"
            android:id="@+id/lr_status_one_tv_next"
            android:layout_marginRight="24dp"
            android:textSize="14sp"
            android:padding="10dp"
            android:textColor="#000000"
            android:fontFamily="sans-serif-condensed"
            android:textAllCaps="true"/>
    </LinearLayout>
    </ScrollView>
</RelativeLayout>