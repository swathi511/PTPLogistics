<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:background="@color/colorAshLight"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:background="@color/colorAccent"
        android:id="@+id/dnf_tv_del_note"
        android:text="Delivery Note details"
        android:textAlignment="center"
        android:textColor="@color/colorBlack"
        android:textSize="16sp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="16dp"
        android:background="@color/colorAccent"
        android:gravity="center"
        android:text="Home"
        android:id="@+id/dnf_tv_homee"
        android:textAlignment="center"
        android:textColor="@color/colorBlack"
        android:textSize="16sp" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dnf_tv_homee"
        android:orientation="vertical" >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/backward"
            android:layout_gravity="left"
            android:layout_marginTop="5dp"
            android:id="@+id/dnf_iv_backwrd"
            android:layout_marginLeft="16dp"/>
        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:paddingBottom="10dp"
            android:background="@color/colorBlack"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:paddingLeft="15dp"
            android:layout_marginRight="15dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Delv.Hamali Chrg"
                    android:textColor="#000000"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:layout_marginLeft="16dp"/>
                <EditText
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:id="@+id/dnf_et_delv_hamali_charg"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:padding="2dp"
                    android:background="@drawable/et_bg"
                    android:layout_marginLeft="16dp"
                    android:inputType="number"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Demurrage Chrg"
                    android:textColor="#000000"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:layout_marginLeft="16dp"/>
                <EditText
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:id="@+id/dnf_et_demurrage_charge"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:padding="2dp"
                    android:background="@drawable/et_bg"
                    android:layout_marginLeft="16dp"
                    android:inputType="number"/>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:paddingLeft="15dp"
            android:layout_marginRight="15dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginBottom="10dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sales Tax Amount"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:textColor="#000000"
                    android:layout_marginLeft="16dp"/>
                <EditText
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:id="@+id/dnf_et_sales_tax_amount"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:padding="2dp"
                    android:background="@drawable/et_bg"
                    android:layout_marginLeft="16dp"
                    android:inputType="number"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginRight="12dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Grand Total"
                    android:textColor="#000000"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:layout_marginLeft="16dp"/>
                <EditText
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:id="@+id/dnf_et_grand_total"
                    android:layout_marginTop="10dp"
                    android:padding="2dp"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:background="@drawable/bg_dark"                    android:layout_marginLeft="16dp"
                    android:inputType="number"/>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="32dp"
            android:layout_marginTop="20dp"
            android:paddingRight="32dp"
            android:layout_marginBottom="24dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Goods Received By"
                android:textSize="14sp"
                android:textColor="#000000"
                android:layout_weight="2"
                android:gravity="left"/>

            <!--<TextView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:text=":"-->
                <!--android:textSize="14sp"-->
                <!--android:textColor="#000000"-->
                <!--android:layout_marginLeft="12dp"-->
                <!--android:layout_marginRight="12dp"/>-->

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:id="@+id/dnf_et_goods_received_by"
                android:textColor="#000000"
                android:layout_weight="2"
                android:gravity="left"
                android:padding="4dp"
                android:inputType="text"
                android:maxLength="20"
                android:background="@drawable/et_bg"
                android:maxLines="2"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="32dp"
            android:paddingRight="32dp"
            >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Contact No"
                android:textSize="14sp"
                android:textColor="#000000"
                android:layout_weight="2"
                android:gravity="left"/>



            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:id="@+id/dnf_et_contact_no"
                android:textColor="#000000"
                android:layout_weight="2"
                android:gravity="left"
                android:padding="4dp"
                android:inputType="number"
                android:maxLength="20"
                android:background="@drawable/et_bg"
                android:maxLines="2"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="32dp"
            android:layout_marginTop="20dp"
            android:paddingRight="32dp"
            >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Time"
                android:textSize="14sp"
                android:textColor="#000000"
                android:layout_weight="2"
                android:gravity="left"/>


            <Spinner
                android:layout_width="146dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:gravity="left"
                android:id="@+id/dnf_sp_time"
                android:background="@drawable/spinner_bg"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="32dp"
            android:layout_marginTop="20dp"
            android:paddingRight="32dp"
            >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Remarks"
                android:textSize="14sp"
                android:textColor="#000000"
                android:layout_weight="2"
                android:gravity="left"/>



            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:id="@+id/dnf_et_remarks"
                android:textColor="#000000"
                android:layout_weight="2"
                android:gravity="left"
                android:padding="16dp"
                android:inputType="text"
                android:maxLength="20"
                android:background="@drawable/et_bg"
                android:lines="20"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="32dp"
            android:paddingRight="32dp"
            android:orientation="horizontal"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="16dp"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Deliver"
                android:background="@drawable/bt_bg"
                android:gravity="center"
                android:layout_marginRight="16dp"
                android:textSize="14sp"
                android:layout_gravity="center"
                android:padding="10dp"
                android:id="@+id/dnf_tv_delivery"
                android:fontFamily="sans-serif-condensed"
                android:textAllCaps="true"
                android:textColor="#000000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Cancel "
                android:background="@drawable/bt_bg"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginRight="16dp"
                android:textSize="14sp"
                android:id="@+id/dnf_tv_cancel"
                android:padding="10dp"
                android:textColor="#000000"
                android:fontFamily="sans-serif-condensed"
                android:textAllCaps="true"/>



        </LinearLayout>
    </LinearLayout>
    </ScrollView>
</RelativeLayout>