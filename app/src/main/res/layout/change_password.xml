<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAshLight"
  >





    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginTop="40dp"
            android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:id="@+id/cp_tv_user_name"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_dark"
            android:padding="10dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:hint="User Name"
            android:textColorHint="#000000"
            android:maxLines="1"
            android:textSize="16sp"
            android:visibility="gone"/>

        <EditText
            android:layout_width="match_parent"
            android:id="@+id/cp_et_old_pass"
            android:layout_height="wrap_content"
            android:background="@drawable/et_bg"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:hint="Old Password"
            android:textColorHint="#000000"
            android:maxLines="1"
            android:inputType="textPassword"
            android:textSize="16sp"
            android:drawableRight="@drawable/pass"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/et_bg"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:id="@+id/cp_et_new_pass"
            android:hint="New Password"
            android:textColorHint="#000000"
            android:maxLines="1"
            android:inputType="textPassword"
            android:textSize="16sp"
            android:drawableRight="@drawable/pass"
          />

        <!--<EditText-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:background="@drawable/et_bg"-->
            <!--android:padding="10dp"-->
            <!--android:id="@+id/cp_et_cfrm_pass"-->
            <!--android:hint="Confirm Password"-->
            <!--android:textColorHint="#000000"-->
            <!--android:maxLines="1"-->
            <!--android:layout_marginLeft="50dp"-->
            <!--android:layout_marginRight="50dp"-->
            <!--android:layout_marginTop="10dp"-->
            <!--android:inputType="textPassword"-->
            <!--android:textSize="16sp"/>-->


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="24dp"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bt_bg"
                android:text="save"
                android:layout_gravity="center"
                android:gravity="center"
                android:id="@+id/cp_bt_save"
                android:textAllCaps="true"
                android:fontFamily="sans-serif-condensed"
                android:textSize="15sp"
                android:layout_marginRight="8dp"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bt_bg"
            android:text="cancel"
            android:id="@+id/cp_bt_cancel"
            android:layout_gravity="center"
            android:gravity="center"

            android:textAllCaps="true"
            android:fontFamily="sans-serif-condensed"
            android:textSize="15sp"
            android:layout_marginLeft="8dp"
            />
        </LinearLayout>


    </LinearLayout>
    </ScrollView>

</RelativeLayout>