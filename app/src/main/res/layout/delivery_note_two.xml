<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAshLight"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="8dp"
                android:orientation="horizontal">
                <EditText
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:padding="2dp"
                    android:id="@+id/dnt_et_basic_frght"
                    android:hint="Basic Frieght"
                    android:layout_weight="1"
                    android:background="@drawable/bg_dark"
                    android:layout_marginLeft="8dp"
                    android:inputType="number"/>
                <EditText
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:padding="2dp"
                    android:layout_weight="1"
                    android:hint="SurCharges"
                    android:id="@+id/dnt_et_surcharge"

                    android:background="@drawable/bg_dark"
                    android:layout_marginLeft="8dp"
                    android:inputType="number"/>
                <EditText
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:padding="2dp"
                    android:hint="LR Chrg."
                    android:id="@+id/dnt_et_lr_charg"
                    android:background="@drawable/bg_dark"
                    android:layout_marginLeft="8dp"
                    android:inputType="number"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:layout_marginTop="15dp"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="8dp"
                android:orientation="horizontal">
                <EditText
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:padding="2dp"
                    android:hint="Hamali Chrg."
                    android:layout_weight="1"
                    android:id="@+id/dnt_et_hamali_chrg"
                    android:background="@drawable/bg_dark"
                    android:layout_marginLeft="8dp"
                    android:inputType="number"/>
                <EditText
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:padding="2dp"
                    android:id="@+id/dnt_et_cc_chrg"
                    android:layout_weight="1"
                    android:hint="CC Chrg."
                    android:background="@drawable/bg_dark"
                    android:layout_marginLeft="8dp"
                    android:inputType="number"/>
                <EditText
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:padding="2dp"
                    android:hint="DC Chrg."
                    android:id="@+id/dnt_et_dc_chrg"
                    android:background="@drawable/bg_dark"
                    android:layout_marginLeft="8dp"
                    android:inputType="number"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:layout_marginTop="15dp"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="8dp"
                android:orientation="horizontal">
                <EditText
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:padding="2dp"
                    android:hint="Cart. Chrg"
                    android:id="@+id/dnt_et_cart_chrg"
                    android:layout_weight="1"
                    android:background="@drawable/bg_dark"
                    android:layout_marginLeft="8dp"
                    android:inputType="number"/>
                <EditText
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:padding="2dp"
                    android:id="@+id/dnt_et_with_pass_chrg"
                    android:layout_weight="1"
                    android:hint="With Pass Chrg"
                    android:background="@drawable/bg_dark"
                    android:layout_marginLeft="8dp"
                    android:inputType="number"/>
                <EditText
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:padding="2dp"
                    android:hint="Stat.Chrg."
                    android:id="@+id/dnt_et_stat_chrg"
                    android:background="@drawable/bg_dark"
                    android:layout_marginLeft="8dp"
                    android:inputType="number"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:layout_marginTop="15dp"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="8dp"
                android:orientation="horizontal">
                <EditText
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:padding="2dp"
                    android:id="@+id/dnt_et_pod_chrg"
                    android:hint="POD Chrg."
                    android:layout_weight="1"
                    android:background="@drawable/bg_dark"
                    android:layout_marginLeft="8dp"
                    android:inputType="number"/>
                <EditText
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:padding="2dp"
                    android:layout_weight="1"
                    android:hint="Before Tax"
                    android:id="@+id/dnt_et_b_tax"
                    android:background="@drawable/bg_dark"
                    android:layout_marginLeft="8dp"
                    android:inputType="number"/>
                <EditText
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:padding="2dp"
                    android:id="@+id/dnt_et_value_surchrg"
                    android:hint="Value SurChrg."
                    android:background="@drawable/bg_dark"
                    android:layout_marginLeft="8dp"
                    android:inputType="number"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:layout_marginTop="15dp"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="8dp"
                android:orientation="horizontal">
                <EditText
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:padding="2dp"
                    android:hint="Art.Chrg."
                    android:id="@+id/dnt_et_art_chrg"
                    android:layout_weight="1"
                    android:background="@drawable/bg_dark"
                    android:layout_marginLeft="8dp"
                    android:inputType="number"/>
                <EditText
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:padding="2dp"
                    android:layout_weight="1"
                    android:hint="DD Chrg."
                    android:id="@+id/dnt_et_dd_chrg"
                    android:background="@drawable/bg_dark"
                    android:layout_marginLeft="8dp"
                    android:inputType="number"/>
                <EditText
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:padding="2dp"
                    android:hint="Vender Lr Amt"
                    android:id="@+id/dnt_et_vendr_amt"
                    android:background="@drawable/bg_dark"
                    android:layout_marginLeft="8dp"
                    android:inputType="number"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:layout_marginTop="15dp"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="8dp"
                android:orientation="horizontal">
                <EditText
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:padding="2dp"
                    android:hint="Del hamali Chrg."
                    android:layout_weight="1"
                    android:id="@+id/dnt_et_del_hamali_chrg"
                    android:background="@drawable/bg_dark"
                    android:layout_marginLeft="8dp"
                    android:inputType="number"/>
                <EditText
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:padding="2dp"
                    android:layout_weight="1"
                    android:hint="Demm Chrg"
                    android:id="@+id/dnt_et_demm_chrg"
                    android:background="@drawable/bg_dark"
                    android:layout_marginLeft="8dp"
                    android:inputType="number"/>
                <EditText
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:padding="2dp"
                    android:id="@+id/dnt_et_sales_amt"
                    android:hint="Sales tax Amt"
                    android:background="@drawable/bg_dark"
                    android:layout_marginLeft="8dp"
                    android:inputType="number"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:layout_marginTop="15dp"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp"
                android:orientation="horizontal">
                <EditText
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:padding="2dp"
                    android:hint="Grand Tot."
                    android:id="@+id/dnt_et_grand_tot"
                    android:layout_weight="1"
                    android:background="@drawable/bg_dark"
                    android:layout_marginRight="32dp"
                    android:inputType="number"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:layout_weight="0.5"
                    android:text="Time: "/>
                <Spinner
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:gravity="left"
                    android:id="@+id/dnt_sp_time"
                    android:layout_weight="0.5"
                    android:background="@drawable/spinner_bg"

                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="16dp"
                android:orientation="horizontal">


                <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint="Goods Rec By"
                    android:textSize="14sp"
                    android:inputType="text"
                    android:textColor="#000000"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:id="@+id/dnt_et_goods_rec_by"
                    android:padding="4dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/bg_dark"
                    android:maxLines="2"/>
                <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint="Contact No."
                    android:textSize="14sp"
                    android:id="@+id/dnt_et_contact_no"
                    android:inputType="number"
                    android:textColor="#000000"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:padding="4dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/bg_dark"
                    android:maxLines="2"/>


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="16dp"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Remarks"
                    android:textSize="14sp"
                    android:textColor="#000000"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:padding="4dp"
                    android:layout_marginLeft="10dp"
                    android:maxLines="2"/>
                <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:inputType="text"
                    android:textColor="#000000"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:padding="16dp"
                    android:id="@+id/dnt_et_remarks"

                    android:lines="6"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/et_bg"
                    />


            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="GST/Ser. Tax"
                    android:textColor="#000000"
                    android:layout_gravity="left"
                    />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="32dp"
                    android:orientation="horizontal">
                    <EditText
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textAlignment="center"
                        android:gravity="center"
                        android:padding="2dp"
                        android:id="@+id/dnt_et_gst_one"
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/bg_dark"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="%"
                        android:gravity="bottom"
                        android:layout_gravity="bottom"
                        android:textAlignment="center"/>
                    <EditText
                        android:layout_width="110dp"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textAlignment="center"
                        android:gravity="center"
                        android:padding="2dp"
                        android:id="@+id/dnt_et_gst_two"

                        android:layout_marginLeft="5dp"
                        android:background="@drawable/bg_dark"
                        android:inputType="number"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="LR With Pass"
                    android:textColor="#000000"
                    android:layout_gravity="left"
                    />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="32dp"
                    android:orientation="horizontal">
                    <Spinner
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:gravity="left"
                        android:id="@+id/dnt_sp_lr_withpass_one"

                        android:background="@drawable/spinner_bg"

                        />
                    <EditText
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textAlignment="center"
                        android:gravity="center"
                        android:padding="2dp"
                        android:id="@+id/dnt_et_lr_withpass_two"

                        android:layout_marginLeft="5dp"
                        android:background="@drawable/bg_dark"                        android:inputType="number"/>
                </LinearLayout>
            </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="16dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="16dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Deliver"
                android:textAlignment="center"
                android:layout_marginTop="20dp"
                android:background="@drawable/bt_bg"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="14sp"
                android:padding="10dp"
                android:id="@+id/dnt_tv_del"

                android:layout_marginRight="15dp"
                android:textColor="#000000"
                android:fontFamily="sans-serif-condensed"
                android:textAllCaps="true"/>
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Cancel"
                android:textAlignment="center"
                android:layout_marginTop="20dp"
                android:background="@drawable/bt_bg"
                android:layout_gravity="center"
                android:gravity="center"
                android:id="@+id/dnt_tv_cancel"

                android:textSize="14sp"
                android:padding="10dp"
                android:textColor="#000000"
                android:fontFamily="sans-serif-condensed"
                android:textAllCaps="true"/>
        </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>